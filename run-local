#!/bin/bash

docker run \
  --rm \
  -it \
  -e USER=$USER \
  -e REPO=$REPO \
  -e BRANCH=$BRANCH \
  -e TOKEN=$TOKEN \
  -e IMAGE_NAME=$IMAGE_NAME \
  -e DEBUG=$DEBUG \
  -e CLEAN=$CLEAN \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v $PWD/builder:/builder \
  -v $PWD/repos:/repos \
  -v $HOME/.docker:/root/.docker \
  firstandthird/builder
